<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_item"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    app:cardCornerRadius="4dp"
    android:layout_margin="2dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp">

        <TextView
            android:id="@+id/txt_school_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New York High School"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_margin="2dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>

        <TextView
            android:id="@+id/txt_school_neighborhood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chelsea-Union Sq"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/txt_school_address"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_school_name">
        </TextView>

        <TextView
            android:id="@+id/txt_school_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address of School here"
            android:maxLines="2"
            android:textSize="10sp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_school_neighborhood">
        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>

